<div class="container">
  <div class="row pt-3">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@product.image_url, class: "img-fluid img-fit product-img")unless @product.image_url.nil? %>
    </div>
    <div class="col-sm-12 col-md-6 pt-3">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <div style="display:inline;">
        <p>
          <strong>Image url:</strong>
          <%= @product.image_url %>
        </p>

      </div>

      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
      Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
      <!--<%# <%= link_to 'Edit', edit_product_path(@product) %> | %>-->
      <p class="pt-3"><%= link_to 'Back to previous page', products_path %></p>

    </div>
  </div>
  <div class="row pt-3">
    <div class="col-12">
      <%= render 'shared/new_comment' %>

    </div>
  </div>
  <div class="row pt-3">
    <div class="col-12">
      <%= render 'shared/comments' %>
      <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>


    </div>
  </div>
</div>
