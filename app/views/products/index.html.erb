<div class="nav-white-products"></div>
<p id="notice"><%= notice %></p>


<div class="container center">
  <h1>Unique To You</h1>
  <h2>Our products are handmade, one-of-a-kind masterpieces that you wont find anywhere else.</h2>
  <div class="row">
    <% @products.each do |product| %>
    <div class="product-row col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <%= image_tag(product.image_url, class: "img-fluid img-fit")unless product.image_url.nil? %>
      <div class="product-infobox">
        <a href="#"><h1 class="product-name"><%= product.name %></h1></a>
        <p class="product-description"><%= product.description %></p>
        <p class="product-color"><%= product.color %></p>
        <p class="product-price"><%= product.price %>$</p>
        <button class="product-button" type="button" name="button">Buy Now!</button>
      </div>

        <div class="show-edit-destroy">
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div><!-- /row -->
    </div><!-- /col -->
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.color %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

