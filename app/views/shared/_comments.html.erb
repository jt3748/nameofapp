<div class="product-reviews" id="comments">
  <h4>Product Reviews</h4>
    <% @comments.each do |comment| %>
        <div class="row">
          <div class="col-12">
            <hr>
            <div class="user">
              <div class="user-icon pr-2">
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="user-name">
                <p class=""><%= comment.user.first_name %> </p>
              </div>
            </div>
            <p><strong><%= "Rating: #{comment.rating}/5" %></strong></p>
            <p><%= comment.body %></p>
            <p><small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <div class="rated" data-score="<%= comment.rating %>"></div>

          </div>
        </div>
    <% end %>
</div>
