<div class="product-row col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card">
    <%= link_to (image_tag(product.image_url, :class => "card-img-top img-fluid img-fit product-img")unless product.image_url.nil?), product %>
    <div class="product-infobox">
      <div class="card-body">
        <a href="#"><h1 class="card-title product-name"><%= product.name %></h1></a>
        <p class="card-text"><%= product.description %> <br>
        <%= product.color %><br>
        <%= number_to_currency(product.price) %>
        <div class="">
          <button class="form-control product-btn btn btn-lg btn-block mx-auto" type="button" name="button">Add To Cart</button>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="show-edit-destroy">
    <%= link_to 'Show', product %>
    <%= link_to 'Edit', edit_product_path(product) %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div><!-- /row -->
