

$(document).on('turbolinks:load', function(){


  $('.card:eq( 0 )').addClass('slide-0');
  $('.card:eq( 1 )').addClass('slide-1');
  $('.card:eq( 2 )').addClass('slide-2');
  $('.card:eq( 3 )').addClass('slide-3');
  $('.card:eq( 4 )').addClass('slide-4');
  $('.card:eq( 5 )').addClass('slide-5');
  $('.card:eq( 6 )').addClass('slide-6');
  $('.card:eq( 7 )').addClass('slide-7');

  $('.rating').raty({
    starHalf: '<%= asset_path "star-half.png" %>',
    starOff: '<%= asset_path "star-off.png" %>',
    starOn: '<%= asset_path "star-on.png" %>',
    scoreName: 'comment[rating]'
  });
  $('.rated').raty({
   starHalf: '<%= asset_path 'star-half.png' %>',
   starOff: '<%= asset_path 'star-off.png' %>',
   starOn: '<%= asset_path 'star-on.png' %>',
   readOnly: true,
     score: function() {
       return $(this).attr('data-score');
     }
  });
function setElevate(){
  if ( $(window).width() > 768 ) {
      var height = $('.product-img').height()
      var width = $('.product-img').width()
      $('#zoom').addClass('img-zoom elevateZoom')
      $('.img-zoom').elevateZoom({
        zoomWindowHeight: height/2,
        zoomWindowWidth: width,
        zoomWindowPosition: 1
      });

      $('.img-zoom').mouseenter(function(){
        $('.prod-info').addClass("d-none");
      });

      $('.img-zoom').mouseout(function(){
        $('.prod-info').removeClass("d-none");
      });
    }else{
      $('.product-img').removeClass('img-zoom elevateZoom');
      $('.zoomContainer').remove();
      $('.product-img').mouseenter(function(){
        $('.prod-info').removeClass('d-none');
      });
    }
  }
  $(window).resize(function(){
    setElevate();
  });
  setElevate();

});
